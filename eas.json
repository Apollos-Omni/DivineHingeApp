{
  "cli": {
    "version": ">=16.18.0",
    "appVersionSource": "remote"
  },
  "build": {
    "shared": { "node": "20.19.2" },

    "development": {
      "extends": "shared",
      "developmentClient": true,
      "distribution": "internal",
      "android": { "buildType": "apk" }
    },

    "preview": {
      "extends": "shared",
      "distribution": "internal",
      "channel": "preview",
      "android": { "buildType": "apk" }
    },

    "production": {
      "extends": "shared",
      "autoIncrement": true,
      "channel": "production",
      "android": { "buildType": "app-bundle" }
    }
  },
  "submit": {
    "production": {}
  }
}
