{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["expo", "react", "react-native", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app.config.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", ".expo", ".eas-archive", "dist"]
}
